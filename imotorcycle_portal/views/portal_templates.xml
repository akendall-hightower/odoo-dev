<odoo>
    <!-- Adds Garage Button to Portal Home -->
    <template id="portal_my_home" name="Show Garage" customize_show="True" inherit_id="portal.portal_my_home" priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/motorcycle_registry/static/description/icon.png'"/>
                <t t-set="title">My Garage</t>
                <t t-set="url" t-value="'/my/garage'"/>
                <t t-set="text">Check your motorcycle garage.</t>
                <t t-set="placeholder_count" t-value="'garage_count'"/>
            </t>
        </xpath>            
    </template>

    <!-- Inherit Breadcrumbs Template and add Garage and record to breadcrumbs if needed -->
    <template id="portal_layout" name="Portal breadcrumb: garage" inherit_id="portal.portal_breadcrumbs">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'garage' or doc" class="col-lg-2" t-attf-class="breadcrumb-item #{'active ' if not doc else ''}">
                <a t-if="doc" t-attf-href="/my/garage?{{ keep_query() }}">My Garage</a>
                <t t-else="">My Garage</t>
            </li>
            <li t-if="doc" class="breadcrumb-item active text-truncate col-8 col-lg-10">
                <t t-esc="doc.registry_number"/>
            </li>
        </xpath>
    </template>
    
    <!-- Portal List View -->
    <template id="my_garage" name="My Garage">
        <!-- Add Portal Layout to the Page -->
        <t t-call="portal.portal_layout">
            <!-- Garage Table View -->
            <t t-if="motorcycles" t-call="portal.portal_table">
                <thead>
                    <tr>
                        <th>Registry Number</th>
                        <th>Make</th>
                        <th>Model</th>
                        <th>VIN</th>
                        <th>License Plate</th>
                        <th>Registration Date</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="motorcycles" t-as="doc">
                        <td>
                            <a t-attf-href="/my/garage/{{slug(doc)}}">
                                <span t-field="doc.registry_number"/>
                            </a>
                        </td>
                        <td>
                            <span t-field="doc.make"/>
                        </td>
                        <td>
                            <span t-field="doc.model"/>
                        </td>
                        <td>
                            <span t-field="doc.vin"/>
                        </td>
                        <td>
                            <span t-field="doc.license_plate"/>
                        </td>
                        <td>
                            <span t-field="doc.registry_date"/>
                        </td>
                    </tr>
                </tbody>
            </t>
            <t t-else="">
                <div class="alert alert-warning" role="alert">There are no motorcycles in your Garage.</div>
            </t>
        </t>
    </template>

